<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <action
        android:id="@+id/action_global_splashFragment"
        app:destination="@id/splashFragment"
        app:popUpTo="@id/nav_graph"/>

    <action
        android:id="@+id/action_global_authFlowFragment"
        app:destination="@id/authFlowFragment"
        app:popUpTo="@id/nav_graph"/>

    <action
        android:id="@+id/action_global_governorFlowFragment"
        app:destination="@id/governorFlowFragment"
        app:popUpTo="@id/nav_graph"/>

    <action
        android:id="@+id/action_global_villagesFlowFragment"
        app:destination="@id/villagesFlowFragment"
        app:popUpTo="@id/nav_graph"/>

    <action
        android:id="@+id/action_global_governorAssistantFlowFragment"
        app:destination="@id/governorAssistantFlowFragment"
        app:popUpTo="@id/nav_graph"/>

    <fragment
        android:id="@+id/splashFragment"
        android:name="uz.frankie.mahalla.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/authFlowFragment"
        android:name="uz.frankie.mahalla.ui.auth.AuthFlowFragment"
        android:label="flow_fragment_auth"
        tools:layout="@layout/flow_fragment_auth" />
    <fragment
        android:id="@+id/governorFlowFragment"
        android:name="uz.frankie.mahalla.ui.governor.GovernorFlowFragment"
        android:label="flow_fragment_governor"
        tools:layout="@layout/flow_fragment_governor" />
    <fragment
        android:id="@+id/governorAssistantFlowFragment"
        android:name="uz.frankie.mahalla.ui.governor_assistant.GovernorAssistantFlowFragment"
        android:label="flow_fragment_governor_assistant"
        tools:layout="@layout/flow_fragment_governor_assistant" />
    <fragment
        android:id="@+id/villagesFlowFragment"
        android:name="uz.frankie.mahalla.ui.villages.VillagesFlowFragment"
        android:label="flow_fragment_villages"
        tools:layout="@layout/flow_fragment_villages" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="uz.frankie.mahalla.ui.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />


</navigation>